<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ReZoom | Resume Templates</title>
  <link rel="stylesheet" href="/css/home.css">
</head>
<body>

  <header>
    <div class="logo">
      <img src="/images/rezoomlogo.png" alt="ReZoom Logo" />
      <h2>ReZoom</h2>
    </div>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="#">Create Your Resume</a></li>
        <li><a href="#">About Us</a></li>
        <li><a href="#">Give Feedback</a></li>
      </ul>
    </nav>
  </header>

  <main class="container">
    <h1>Try our Templates</h1>
    <div class="themes">
      <% themes.forEach(theme => { %>
        <div class="theme-card">
          <img src="<%= theme.image %>" alt="<%= theme.name %> preview">
          <h3 class="theme-name"><%= theme.name %></h3>
          <a class="select-btn" href="/resume/form?theme=<%= theme.id %>">Use this Template</a>
        </div>
      <% }) %>
    </div>
  </main>

  <footer>
    <p>© 2025 ReZoom • All rights reserved</p>
  </footer>

</body>
</html>
